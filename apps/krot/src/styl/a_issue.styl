.issue_map
	overflow hidden
	width 1180px
	position relative
	.articles_list
		float left
		background-color rgb(231, 197, 123)
		width 300px
		top 0; bottom 0; right 0
		position absolute
		display none
		&.show
			display block
		.list_search
			display block
			// width 100%
			// margin 0
			// padding 0
			// border none
		.list_items
			height 100%
			overflow-y scroll
	.issue_colums
		float left
		overflow hidden
		width 880px
		background-color grey
		user-select none
		.issue_column
			width 200px
			float left
			min-height 220px
			background-color lightgrey
			margin-right 20px
			&:hover .delete_item.column
				opacity 1
			.placeholder
				width 200px
				height 200px
				background-color black
				margin-bottom 20px
			.issue_article
				width 200px
				height 200px
				margin-bottom 20px
				background-color green
				position relative
				&:hover .delete_item.article
					opacity 1

.delete_item
	background-color black
	color white
	display inline-block
	padding-left 5px
	padding-right 5px
	opacity 0
	&.article
		position absolute
		right 0
		&:after
			content 'удалить'
	&.column
		&:after
			content 'удалить колонку'
	&:hover
		background-color red

.add_item
	width 200px
	height 200px
	text-align center
	&:after
		content '+'
		font-size 120px
		line-height 170px
		color black
		z-index 999999
	&.article
		background-color rgb(131, 193, 216)
		&.select
			background-color rgb(187, 242, 112)
	&.column
		float left
		margin-top 20px
		background-color rgb(243, 166, 219)