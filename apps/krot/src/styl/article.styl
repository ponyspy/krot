.logo_block .cover
	border 15px solid black
	box-sizing border-box

.article_header
	margin-top 20px
	margin-bottom 20px
	overflow hidden
	.header_back
		display block
		float left
		&:hover
			background-color rgb(255, 237, 52)
	.article_categorys
		float right

.article_body
	max-width 600px
	margin 0 auto
	hyphens auto
	.article_intro
		font-weight bold
		margin-bottom 20px
	.article_description
		overflow hidden
		div
			display inline-block
			margin-bottom 20px
		img
			width 100%
			display inline-block
			position relative
			// margin-right -180px
			// float right
			&.left
				float left
				left -180px
			&.right
				float right
				right -180px
	.article_files
		margin-bottom 20px
		.file_item
			color black
			text-decoration none
			margin-right 20px
			&:hover
				text-decoration underline
				font-weight bold
			&:last-child
				margin-right 0

.article_summary
	margin-top 20px
	.summary_item
		display inline-block
		img
			height 160px
		margin-right 20px
		.s_item_base
			display block
		.s_item_hover
			display none
		&:hover
			.s_item_base
				display none
			.s_item_hover
				display block