.issue_columns
	overflow hidden
	.column_item
		width 300px
		float left
		margin-right 15px
		// border 1px solid red
		.article_item
			position relative
			display block
			margin-bottom 10px
			&:last-child
				margin-bottom 0
			.article_categorys
				position absolute
				left 10px
				bottom 10px
				overflow hidden
				.category_item
					display inline-block
					vertical-align bottom
					padding 6px
					background-color black
					color white
					text-decoration none
					text-transform uppercase
					margin-right 10px
					font-size 10pt
					font-weight bold
					&:last-child
						margin-right 0
					&:hover
						background-color rgb(255, 237, 52)
						color black
			.article_cover
				display block
				text-decoration none
				.cover_base
					width 100%
					display block
				.cover_hover
					width 100%
					display none
			&:hover
				.cover_base
					display none
				.cover_hover
					display block