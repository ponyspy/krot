.issue_columns
	overflow hidden
	.column_item
		width 280px
		// border 2px solid red
		float left
		.article_item
			position relative
			display block
			text-decoration none
			.article_categorys
				position absolute
				bottom 0
				overflow hidden
				.category_item
					display block
					float left
					padding 6px
					background-color black
					color white
					text-decoration none
					text-transform uppercase
					&:hover
						background-color rgb(255, 237, 52)
			.article_cover
				display block
				text-decoration none
				img
					width 280px
				.cover_base
					display block
				.cover_hover
					display none
			&:hover
				.cover_base
					display none
				.cover_hover
					display block