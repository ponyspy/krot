body
	margin 0
	padding 0
	font-family 'PT Mono'

.outer_block
	max-width 960px
	margin 0 auto
	padding-left 20px
	padding-right 20px
	padding-bottom 10px

	.logo_block img
		width 100%
		max-width 960px
		display block

	.footer_block
		margin-top 15px
		padding-top 15px
		overflow hidden
		border-top 8px solid rgb(255, 237, 52)
		.footer_logo
			float left
			margin-right 20px
		.footer_links
			float left
			text-align center
			a
				display block
				background-color black
				color white
				font-size 11pt
				padding 5px
				text-decoration none
				text-transform uppercase
				margin-bottom 10px
				border 3px solid transparent
				box-sizing border-box
				&.mail
					background-color transparent
					text-transform lowercase
					color black
					&:hover
						border 3px solid black
						box-sizing border-box
						background none
				&:last-child
					margin-bottom 0
				&:hover
					background-color rgb(255, 237, 52)
					color black
		.footer_back
			float right
			border 8px solid black
			color black
			text-decoration none
			padding 10px
			font-size 44pt
			text-transform uppercase
			font-weight bold
			&:hover
				color rgb(255, 237, 52)
				border-color rgb(255, 237, 52)