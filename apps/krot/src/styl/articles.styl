.articles_block
	width 100%
	max-width 600px
	margin 0 auto
	hyphens auto
	.article_item
		margin-top 80px
		&:hover .cover.hover
			display block!important
		.article_header
			text-decoration none
			.article_title
				font-size 18pt
				line-height 22pt
				font-weght bold
				text-transform uppercase
				margin-bottom 20px
			.article_cover
				width 100%
				padding-top 56%
				position relative
				.cover
					top 0
					left 0
					width 100%
					height 100%
					position absolute
					background-position center
					background-size cover
					background-repeat no-repeat
					&.hover
						display none
		.article_intro
			margin-top 20px
		.article_categorys
			margin-top 20px

.articles_loader
	margin-top 20px
	margin-bottom 20px
	text-align center
	&.hide
		display none
	span:hover
		cursor pointer

