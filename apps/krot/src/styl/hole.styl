.content_block
	max-width 600px
	margin 0 auto
	.hole_title
		margin-top 40px
	.hole_question
		margin-top 40px
		.question_cover
			width 100%
			display block
			border 8px solid black
			box-sizing border-box
		.question_title
			margin-top 20px
			font-size 16pt
			line-height 18pt
		.question_answer
			margin-bottom 80px
			.answer_input
				margin-top 40px
				outline none
				padding none
				border none
				border-bottom 2px dotted grey
				font-size 22pt
				display block
				width 100%
			.answer_check
				display inline-block
				background-color black
				padding 10px
				padding-left 20px
				padding-right 20px
				margin-top 40px
				font-size 12pt
				font-family 'PT Mono Bold'
				color white
				text-transform uppercase
				cursor pointer
				&:hover
					color black
					background-color rgb(255, 237, 52)