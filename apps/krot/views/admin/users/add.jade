extends ../layout

block paths
	- var content_title= 'ДОБАВИТЬ ПОЛЬЗОВАТЕЛЯ'

block content_style
	link(rel='stylesheet', type='text/css', href='/build/' + __app_name +  '/css/add.css' + version)

block content_scripts
	script(type='text/javascript', src='/build/' + __app_name +  '/js/add.js' + version)

block sub_menu
	a.sub_item.back_link(href='/admin/users') Назад

block content
	.form_block
		.title= content_title
		form(action="", method="post", autocomplete='off')
			.form_title Логин:
			input(type='text', name='login', autocomplete='off')
			.form_title E-mail:
			input(type='text', name='email', autocomplete='off')
			.form_title Пароль:
			input(type='password', name='password', autocomplete='new-password')
			.form_title Роль:
			select(name='status')
				option(value='User') Пользователь
				option(value='Admin') Администратор
			br
			br
			input(type='submit', value='отправить')