extends ../layout

block header_meta
	- var content_title= 'РЕДАКТИРОВАТЬ ПОЛЬЗОВАТЕЛЯ'

block header_include
	- var include_css = ['add.css']
	- var include_js = ['add.js']

block sub_menu
	a.sub_item.back_link(href='/admin/users') Назад
	.sub_right_block
		input.form_cancel(type='submit', value='Отменить')
		input.form_submit(type='submit', value='Сохранить')

block content
	.form_block
		.title= content_title
		form(action='', method='post', autocomplete='off')
			.form_title Логин:
			input(type='text', name='login', value=user.login, autocomplete='off')
			.form_title Email:
			input(type='text', name='email', value=user.email, autocomplete='off')
			.form_title Пароль:
			input(type='password', name='password', placeholder='*******', autocomplete='new-password')
			if (session.status == 'Admin')
				.form_title Роль:
				select(name='status')
					option(value='User', selcted=user.status == 'User') Пользователь
					option(value='Admin', selected=user.status == 'Admin') Администратор