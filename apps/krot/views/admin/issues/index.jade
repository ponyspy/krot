extends ../layout
include _issues

block content_header
	- var content_title= 'НОМЕРА'

	- var content_comps_css = ['add.css']
	- var content_comps_js = ['lists.js']

block sub_menu
	a.sub_item.back_link(href='/admin') Назад
	span.sub_item.toggle_rm Удалить
	span.sub_item.toggle_preview Превью
	.sub_right_block

		.sub_drop.status(style='z-index: 1;')
			.drop_title Статус
			.drop_inner
				.drop_item(class='all').select Все
				.drop_item(class='default') Обычный
				.drop_item(class='hidden') Скрытый

		input.sub_search(type='text', placeholder='Поиск...')

block content
	.title= content_title
	br
	a.add(href='/admin/issues/add') + Добавить номер
	br
	br
	.lists_block
		.list_items
			+items(issues)
		.list_counter
			+counters(count)