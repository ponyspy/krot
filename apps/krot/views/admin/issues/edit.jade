extends ../layout
include ../_forms
include _forms

block paths
	- var content_title= 'РЕДАКТИРОВАТЬ НОМЕР'

block content_style
	link(rel='stylesheet', type='text/css', href='/libs/css/pickmeup.min.css' + version)
	link(rel='stylesheet', type='text/css', href='/libs/css/font-awesome.css' + version)
	link(rel='stylesheet', type='text/css', href='/libs/css/wysiwyg-editor.min.css' + version)
	link(rel='stylesheet', type='text/css', href='/build/' + __app_name +  '/css/add.css' + version)
	link(rel='stylesheet', type='text/css', href='/build/' + __app_name +  '/css/a_issue.css' + version)

block content_scripts
	script(type='text/javascript', src='/libs/js/jquery.pickmeup.min.js' + version)
	script(type='text/javascript', src='/libs/js/wysiwyg.min.js' + version)
	script(type='text/javascript', src='/libs/js/wysiwyg-editor.min.js' + version)
	script(type='text/javascript', src='/libs/js/jquery-ui.min.js' + version)
	script(type='text/javascript', src='/build/' + __app_name +  '/js/editor.js' + version)
	script(type='text/javascript', src='/build/' + __app_name +  '/js/add.js' + version)
	script(type='text/javascript', src='/build/' + __app_name +  '/js/a_events.js' + version)
	script(type='text/javascript', src='/build/' + __app_name +  '/js/a_issue.js' + version)

block sub_menu
	a.sub_item.back_link(href='/admin/issues') Назад

block content
	.form_block
		.title= content_title
		form(action='', method='post', enctype='multipart/form-data')
			.form_title Номер:
			input(type='number', name='numb', min='1', value=issue.numb)
			.form_title Тема:
			+form_text_single('theme', issue)
			.form_title Описание:
			+form_text_multi('description', issue)
			.form_title Логотип:
			+form_single_file('logo', issue)(accept='image/jpeg,image/png,image/svg+xml')
			.form_title Фон:
			+form_single_file('background', issue)(accept='image/jpeg,image/png,image/svg+xml')
			.form_title Стиль фона:
			span Позиция:
			+form_style(['background', 'position'], {'top': 'Сверху', 'center': 'По центру', 'bottom': 'Снизу' }, issue.style.background.position)
			span= ' | '
			span Размер:
			+form_style(['background', 'size'], {'none': 'Фактический', 'cover': 'Вылет', 'contain': 'В край' }, issue.style.background.size)
			span= ' | '
			span Фиксация:
			+form_style(['background', 'attachment'], {'scroll': 'Выкл.', 'fixed': 'Вкл.' }, issue.style.background.attachment)
			span= ' | '
			span Повторение:
			+form_style(['background', 'repeat'], {'no-repeat': 'Выкл.', 'repeat': 'Вкл.' }, issue.style.background.repeat)
			.form_title Карта обложки:
			+form_map(issue.columns)
			.form_title Статус:
			select(name='status')
				option(value='base') Обычный
				option(value='hidden', selected= issue.status == 'hidden' && 'hidden') Скрытый
			.form_title Дата публикации:
			+form_date('date', issue.date)
			br
			br
			input(type='submit', value='отправить')