- var version = '1.0'

meta(charset='utf-8')


block header_meta


if content_title
	title= 'STARGAZER | ' + content_title
if content_description
	meta(name='description', content=content_description)


block header_include


//- styles


- var global_ext_css = []
- var global_libs_css = ['txtbirds.css']
- var global_css = []

- global_ext_css.push.apply(global_ext_css, include_ext_css || [])
each item in global_ext_css
	link(rel='stylesheet', type='text/css', href=item)

- global_libs_css.push.apply(global_libs_css, include_libs_css || [])
each item in global_libs_css
	link(rel='stylesheet', type='text/css', href='/libs/css/' + item + '?ver=' + version)

- global_css.push.apply(global_css, include_css || [])
each item in global_css
	link(rel='stylesheet', type='text/css', href='/build/' + __app_name +  '/css/' + item + '?ver=' + version)


//- scripts


- var global_ext_js = []
- var global_libs_js = ['jquery-3.3.1.min.js']
- var global_js = ['auth.js']

- global_libs_js.push.apply(global_libs_js, include_libs_js || [])
each item in global_libs_js
	script(type='text/javascript', src='/libs/js/' + item + '?ver=' + version)

- global_ext_js.push.apply(global_ext_js, include_ext_js || [])
each item in global_ext_js
	script(type='text/javascript', src=item)

- global_js.push.apply(global_js, include_js || [])
each item in global_js
	script(type='text/javascript', src='/build/' + __app_name +  '/js/' + item + '?ver=' + version)