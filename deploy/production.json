{
	"apps": [
		{
			"name": "krot",
			"script": "./apps/krot/app.js",
			"exec_mode": "fork",
			"autorestart": true,
			"min_uptime": "300s",
			"restart_delay" : 2000,
			"max_restarts": 5,
			"max_memory_restart": "250M",
			"log_date_format" : "YYYY-MM-DD HH:mm",
			"env": {
				"PORT": 3000,
				"NODE_ENV": "production"
			}
		},
	]
}